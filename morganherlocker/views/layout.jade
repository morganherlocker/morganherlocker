					div.nav-collapse
						ul.nav
							li
								a(href='/') 
									i.icon-home.icon-white
									span  home
							//#li
								a(href='/blog') 
									i.icon-pencil.icon-white
									span  blog
							li 
								a(href='/about')
									i.icon-user.icon-white									
									span  about
							li 
								a(href='/contact') 
									i.icon-envelope.icon-white
									span  contact

		block header
