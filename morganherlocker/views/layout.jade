		link(rel='stylesheet', href='/css/bootstrap.min.css')
		link(rel='stylesheet', href='/css/bootstrap-responsive.min.css')
		script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js')
